            <!-- Data Table end here -->
          </div>
        </div>
      </div>

<%- include('layouts/footer') %>
<script>
  $(document).ready( function () {
    $('#table_id').DataTable();
  } );

  function acceptReject(id,status){
    var msg='Users account to approve.';
    if(status==2){
        msg='Users account to reject.';
    }
      swal({
        title: "Are you sure?",
        text: msg,
        icon: "warning",
        buttons: true,
        dangerMode: true,
      })
      .then((willDelete) => {
        if (willDelete) {

          $.ajax({
            type: "POST",
            url: "/admin/accept-reject",
            data: {'status':status,'id':id},
            cache: false,
            success: function(data){
                location.reload();
            }
          });
        } else {

        }
      });
    }
</script>